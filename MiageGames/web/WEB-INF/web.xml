<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletPrincipal</servlet-name>
        <servlet-class>controleur.ServletPrincipal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConnexionServlet</servlet-name>
        <servlet-class>connexion.ConnexionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeconnexionServlet</servlet-name>
        <servlet-class>connexion.DeconnexionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAdmin</servlet-name>
        <servlet-class>controleur.ServletAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUtilisateur</servlet-name>
        <servlet-class>controleur.ServletUtilisateur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreerEditerCompteServlet</servlet-name>
        <servlet-class>connexion.CreerEditerCompteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnexionServlet</servlet-name>
        <url-pattern>/ConnexionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeconnexionServlet</servlet-name>
        <url-pattern>/DeconnexionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAdmin</servlet-name>
        <url-pattern>/ServletAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUtilisateur</servlet-name>
        <url-pattern>/ServletUtilisateur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPrincipal</servlet-name>
        <url-pattern>/categorie</url-pattern>
        <url-pattern>/ServletPrincipal</url-pattern>
        <url-pattern>/creerUtilisateur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreerEditerCompteServlet</servlet-name>
        <url-pattern>/CreerEditerCompteServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
    </jsp-config>
</web-app>
